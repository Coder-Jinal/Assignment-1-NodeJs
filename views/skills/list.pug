extends ../common/layout

block layout-content
  h2.text-center.my-4 Skills Overview
  .add-link
    a(href="/skills/add") Add Skill
  .skill-content
    .row
      each skill in skills 
        .col-md-12
          .card.mb-4
            .card-body
              h5.card-title= skill.name
              h6.card-subtitle.mb-2.text-muted Proficiency: #{skill.proficiency}
              p.card-text
                | Years of Experience: #{skill.yearsOfExperience}
              form(action="/skills/delete/submit")
                input(type="hidden" name="skillId" value=skill._id)
                button(type="submit" class="btn btn-danger") Delete
