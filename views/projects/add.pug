extends ../common/layout 

block layout-content 
    h2 Create a New Project
    form(action="/projects/add/submit", method="POST")
        .form-field 
            label(for="name") Project Name: 
            input(type="text" id="name" name="name" placeholder="Project Name")
        .form-field 
            label(for="technology") Technologies Used:
            input(type="text" id="technology" name="technology" placeholder="Languages used")
        .form-field 
            label(for="description") Project Description: 
            textarea(id="description" name="description" rows="3" cols="30" placeholder="Description about project")
        .form-field 
            button(type="submit" class="btn btn-primary") Submit Project  
